<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/grey_background"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:layout_height="300dp"
        android:id="@+id/imageView2"
        android:src="@drawable/jigorokano"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/linearlayout_bg"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="clip_horizontal|center_vertical|center|center_horizontal">

        <Button

            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:id="@+id/btnGolpes"
            android:padding="0dp"
            android:layout_margin="20dp"
            android:text="@string/golpes"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@color/my_awesome_color">
        </Button>

        <Button
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:id="@+id/btnDicionario"
            android:padding="12dp"
            android:layout_margin="20dp"
            android:text="@string/dicionario"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@color/my_awesome_color">
        </Button>
    </LinearLayout>




</RelativeLayout>

